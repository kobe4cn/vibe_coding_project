# =============================================================================
# Flow Editor Environment Configuration
# =============================================================================
# Copy this file to .env.local and modify values as needed

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------

# Backend API URL
VITE_API_URL=http://localhost:3001/api

# WebSocket URL for real-time updates
VITE_WS_URL=ws://localhost:3001/ws

# -----------------------------------------------------------------------------
# Storage Configuration
# -----------------------------------------------------------------------------

# Default storage mode: 'local' or 'backend'
VITE_DEFAULT_STORAGE_MODE=local

# Enable storage mode switching in settings (default: true)
VITE_ENABLE_STORAGE_SWITCH=true

# -----------------------------------------------------------------------------
# Sync Configuration
# -----------------------------------------------------------------------------

# Auto-sync interval in milliseconds (default: 30000 = 30 seconds)
VITE_SYNC_INTERVAL=30000

# Maximum retry attempts for failed sync operations (default: 3)
VITE_SYNC_MAX_RETRIES=3

# Retry delay in milliseconds (default: 1000)
VITE_SYNC_RETRY_DELAY=1000

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------

# Enable debug mode (shows additional dev tools)
VITE_DEBUG_MODE=false

# Enable version history panel
VITE_ENABLE_VERSION_HISTORY=true

# Enable flow execution
VITE_ENABLE_EXECUTION=true

# Enable export/import features
VITE_ENABLE_EXPORT=true

# -----------------------------------------------------------------------------
# UI Configuration
# -----------------------------------------------------------------------------

# Default theme: 'light' or 'dark' or 'system'
VITE_DEFAULT_THEME=system

# Auto-save interval in milliseconds (default: 5000 = 5 seconds)
VITE_AUTOSAVE_INTERVAL=5000

# Maximum undo history size (default: 50)
VITE_MAX_UNDO_HISTORY=50
